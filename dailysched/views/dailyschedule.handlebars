<div class="schedule-container">
    <header class="schedule-header">
        <h1>Daily Schedule</h1>
        <div class="header-info">
            <span class="date">{{today}}</span>
            <a href="/admin/dashboard" class="back-btn">Back to Dashboard</a>
        </div>
    </header>

    <section class="schedule-section">
        <h2>Starting Today</h2>
        {{#if startingToday.length}}
        <div class="jobs-grid">
            {{#each startingToday}}
            <div class="job-card starting">
                <h3>{{this.description}}</h3>
                <p><strong>Contractor:</strong> {{this.contractorName}}</p>
                <p><strong>Location:</strong> {{this.address}}, {{this.city}}, {{this.state}}</p>
                <p><strong>Start Date:</strong> {{this.startDate}}</p>
                <p><strong>Due Date:</strong> {{this.estimatedEndDate}}</p>
                <div class="job-meta">
                    <span class="status-badge">{{this.status}}</span>
                    <span class="priority-badge priority-{{this.priority}}">{{this.priority}}</span>
                </div>
                <a href="/admin/workorder/{{this._id}}" class="view-link">View Details</a>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p class="no-jobs">No jobs starting today.</p>
        {{/if}}
    </section>

    <section class="schedule-section">
        <h2>In Progress</h2>
        {{#if inProgress.length}}
        <div class="jobs-grid">
            {{#each inProgress}}
            <div class="job-card in-progress">
                <h3>{{this.description}}</h3>
                <p><strong>Contractor:</strong> {{this.contractorName}}</p>
                <p><strong>Location:</strong> {{this.address}}, {{this.city}}, {{this.state}}</p>
                <p><strong>Start Date:</strong> {{this.startDate}}</p>
                <p><strong>Due Date:</strong> {{this.estimatedEndDate}}</p>
                <div class="job-meta">
                    <span class="status-badge">{{this.status}}</span>
                    <span class="priority-badge priority-{{this.priority}}">{{this.priority}}</span>
                </div>
                <a href="/admin/workorder/{{this._id}}" class="view-link">View Details</a>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p class="no-jobs">No jobs in progress.</p>
        {{/if}}
    </section>

    <section class="schedule-section">
        <h2>Due Today</h2>
        {{#if dueToday.length}}
        <div class="jobs-grid">
            {{#each dueToday}}
            <div class="job-card due">
                <h3>{{this.description}}</h3>
                <p><strong>Contractor:</strong> {{this.contractorName}}</p>
                <p><strong>Location:</strong> {{this.address}}, {{this.city}}, {{this.state}}</p>
                <p><strong>Start Date:</strong> {{this.startDate}}</p>
                <p><strong>Due Date:</strong> {{this.estimatedEndDate}}</p>
                <div class="job-meta">
                    <span class="status-badge">{{this.status}}</span>
                    <span class="priority-badge priority-{{this.priority}}">{{this.priority}}</span>
                </div>
                <a href="/admin/workorder/{{this._id}}" class="view-link">View Details</a>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p class="no-jobs">No jobs due today.</p>
        {{/if}}
    </section>

    <section class="schedule-section">
        <h2>Overdue</h2>
        {{#if overdue.length}}
        <div class="jobs-grid">
            {{#each overdue}}
            <div class="job-card overdue">
                <h3>{{this.description}}</h3>
                <p><strong>Contractor:</strong> {{this.contractorName}}</p>
                <p><strong>Location:</strong> {{this.address}}, {{this.city}}, {{this.state}}</p>
                <p><strong>Start Date:</strong> {{this.startDate}}</p>
                <p><strong>Due Date:</strong> {{this.estimatedEndDate}}</p>
                <div class="job-meta">
                    <span class="status-badge">{{this.status}}</span>
                    <span class="priority-badge priority-{{this.priority}}">{{this.priority}}</span>
                </div>
                <a href="/admin/workorder/{{this._id}}" class="view-link">View Details</a>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p class="no-jobs">No overdue jobs.</p>
        {{/if}}
    </section>
</div>

