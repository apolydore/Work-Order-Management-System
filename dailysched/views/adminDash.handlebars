<div class="dashboard-container">
    <header class="dashboard-header">
        <h1>Admin Dashboard</h1>
        <div class="user-info">
            <span>Welcome, {{user.firstName}} {{user.lastName}}</span>
            <a href="/admin/schedule" class="schedule-btn">Daily Schedule</a>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </header>

    <section class="stats-section">
        <h2>Work Order Statistics</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <h3>Total Jobs</h3>
                <p class="stat-number">{{stats.totalJobs}}</p>
            </div>
            <div class="stat-card">
                <h3>Completed</h3>
                <p class="stat-number">{{stats.completed}}</p>
            </div>
            <div class="stat-card">
                <h3>In Progress</h3>
                <p class="stat-number">{{stats.inProgress}}</p>
            </div>
            <div class="stat-card">
                <h3>Not Started</h3>
                <p class="stat-number">{{stats.notStarted}}</p>
            </div>
            <div class="stat-card">
                <h3>Pending Requests</h3>
                <p class="stat-number">{{stats.pendingRequests}}</p>
            </div>
        </div>
    </section>

    <section class="work-orders-section">
        <h2>Active Work Orders</h2>
        {{#if workOrders.length}}
        <table class="work-orders-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Contractor</th>
                    <th>Start Date</th>
                    <th>Est. End Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each workOrders}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.companyName}}</td>
                    <td>{{this.description}}</td>
                    <td>
                        <span class="status-badge status-{{this.status}}">
                            {{this.status}}
                        </span>
                    </td>
                    <td>
                        <span class="priority-badge priority-{{this.priority}}">
                            {{this.priority}}
                        </span>
                    </td>
                    <td>{{this.contractorName}}</td>
                    <td>{{this.startDate}}</td>
                    <td>{{this.estimatedEndDate}}</td>
                    <td>
                        <a href="/admin/workorder/{{this._id}}" class="btn-view">View</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p class="no-data">No work orders found.</p>
        {{/if}}
    </section>

    <section class="job-requests-section">
        <h2>Pending Job Requests</h2>
        {{#if jobRequests.length}}
        <table class="job-requests-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each jobRequests}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.companyName}}</td>
                    <td>{{this.category}}</td>
                    <td>
                        <span class="priority-badge priority-{{this.priority}}">
                            {{this.priority}}
                        </span>
                    </td>
                    <td>{{this.description}}</td>
                    <td>{{this.city}}, {{this.state}}</td>
                    <td>
                        <button class="btn-convert">Convert to WO</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p class="no-data">No pending job requests.</p>
        {{/if}}
    </section>
</div>

