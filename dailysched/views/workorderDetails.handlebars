<div class="detail-container">
    <header class="detail-header">
        <h1>Work Order Details</h1>
        <a href="/admin/dashboard" class="back-btn">Back to Dashboard</a>
    </header>

    <div class="detail-content">
        <section class="info-section">
            <h2>Work Order Information</h2>
            <div class="info-grid">
                <div class="info-item">
                    <span class="label">ID:</span>
                    <span class="value">{{workOrder._id}}</span>
                </div>
                <div class="info-item">
                    <span class="label">Company:</span>
                    <span class="value">{{workOrder.companyName}}</span>
                </div>
                <div class="info-item">
                    <span class="label">Description:</span>
                    <span class="value">{{workOrder.description}}</span>
                </div>
                <div class="info-item">
                    <span class="label">Contractor:</span>
                    <span class="value">{{workOrder.contractorName}}</span>
                </div>
                <div class="info-item">
                    <span class="label">Status:</span>
                    <span class="value">
                        <span class="status-badge">{{workOrder.status}}</span>
                    </span>
                </div>
                <div class="info-item">
                    <span class="label">Priority:</span>
                    <span class="value">
                        <span class="priority-badge priority-{{workOrder.priority}}">{{workOrder.priority}}</span>
                    </span>
                </div>
                <div class="info-item">
                    <span class="label">Location:</span>
                    <span class="value">{{workOrder.address}}, {{workOrder.city}}, {{workOrder.state}} {{workOrder.zipCode}}</span>
                </div>
                <div class="info-item">
                    <span class="label">Start Date:</span>
                    <span class="value">{{workOrder.startDate}}</span>
                </div>
                <div class="info-item">
                    <span class="label">Estimated End Date:</span>
                    <span class="value">{{workOrder.estimatedEndDate}}</span>
                </div>
            </div>
        </section>

        <section class="status-section">
            <h2>Update Status</h2>
            <form method="POST" action="/admin/workorder/{{workOrder._id}}/status">
                <div class="form-group">
                    <label for="status">New Status:</label>
                    <select name="status" id="status">
                        <option value="not started" {{#if (eq workOrder.status 'not started')}}selected{{/if}}>Not Started</option>
                        <option value="in progress" {{#if (eq workOrder.status 'in progress')}}selected{{/if}}>In Progress</option>
                        <option value="completed" {{#if (eq workOrder.status 'completed')}}selected{{/if}}>Completed</option>
                    </select>
                </div>
                <button type="submit" class="submit-btn">Update Status</button>
            </form>
        </section>

        <section class="comments-section">
            <h2>Comments</h2>
            {{#if workOrder.comments.length}}
            <div class="comments-list">
                {{#each workOrder.comments}}
                <div class="comment">
                    <strong>{{this.name}}:</strong>
                    <p>{{this.comment}}</p>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p class="no-comments">No comments yet.</p>
            {{/if}}
        </section>
    </div>
</div>

