<div class="invoice-container">
    <header class="invoice-header">
        <h1>Invoices</h1>
        <a href="/admin/dashboard" class="back-btn">Back to Dashboard</a>
    </header>

    {{#if invoices.length}}
    <table class="invoice-table">
        <thead>
            <tr>
                <th>Invoice ID</th>
                <th>Company</th>
                <th>Work Order</th>
                <th>Status</th>
                <th>Total</th>
                <th>Issued Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each invoices}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.companyName}}</td>
                <td>{{this.workOrderId}}</td>
                <td>
                    <span class="status-badge status-{{this.status}}">
                        {{this.status}}
                    </span>
                </td>
                <td>${{this.total}}</td>
                <td>{{this.issuedDate}}</td>
                <td>
                    <a href="/invoices/{{this._id}}" class="btn-view">View</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p class="no-data">No invoices found.</p>
    {{/if}}
</div>

<style>
    .invoice-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .invoice-header {
        display: flex;
