    }

    .btn-view {
        padding: 6px 12px;
        background-color: #2196f3;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
    }

    .btn-view:hover {
        background-color: #1976d2;
    }

    .no-data {
        text-align: center;
        padding: 40px;
