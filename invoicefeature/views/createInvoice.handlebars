<div class="create-invoice-container">
    <header class="create-invoice-header">
        <h1>Create Invoice</h1>
        <a href="/admin/dashboard" class="back-btn">Cancel</a>
    </header>

    <form method="POST" action="/invoices/create" class="invoice-form">
        <input type="hidden" name="workOrderId" value="{{workOrder._id}}">
        
        <div class="form-group">
            <label>Work Order ID:</label>
            <input type="text" value="{{workOrder._id}}" disabled>
        </div>

        <div class="form-group">
            <label for="companyName">Company Name:</label>
            <input type="text" id="companyName" name="companyName" value="{{workOrder.companyName}}" required>
        </div>

        <div class="form-group">
            <label for="chargeCode">Charge Code:</label>
            <select id="chargeCode" name="chargeCode" required>
                <option value="">Select a charge code</option>
                {{#each charges}}
                <option value="{{this._id}}">{{this._id}} - {{this.description}} (${{{this.avgCharge}}})</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" value="1" min="1" required>
        </div>

        <p class="note">Tax rate: 8.75%</p>

        <button type="submit" class="submit-btn">Create Invoice</button>
    </form>
</div>

